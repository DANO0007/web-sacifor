---
// Importar estilos globales primero
import "../styles/global.css";

// Interface Props exportada para mejores prácticas de TypeScript
export interface Props {
  title?: string;
  description?: string;
  /** Página actual para indicador de navegación activa */
  currentPath?: string;
}

const {
  title = "SACIFOR - Página Ambiental",
  description = "Página web ambiental de SACIFOR",
  currentPath = "/",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#2d7d32" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
