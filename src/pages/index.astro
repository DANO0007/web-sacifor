---
// Importaciones organizadas por tipo siguiendo mejores prácticas de Astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Icon from "../components/Icon.astro";
import "../styles/pages.css";
import { Image } from "astro:assets";
import image1 from "../assets/image1.jpg";
import image2 from "../assets/image2.jpg";
import image3 from "../assets/image3.jpg";

// Configuración de servicios clave centralizada
const keyServices = [
  {
    icon: "leaf" as const,
    title: "Impacto ambiental y cambio de uso de suelo",
    ariaLabel: "Icono de impacto ambiental",
  },
  {
    icon: "globe" as const,
    title: "Atlas de riesgo y ordenamiento territorial",
    ariaLabel: "Icono de ordenamiento territorial",
  },
  {
    icon: "handshake" as const,
    title: "Proyectos de agua potable, saneamiento y recarga hídrica",
    ariaLabel: "Icono de proyectos hidráulicos",
  },
  {
    icon: "handshake" as const,
    title: "Manejo de cuencas y conservación de suelos.",
    ariaLabel: "Icono de cuencas y conservación de suelos",
  },
  {
    icon: "book" as const,
    title: "Capacitación y talleres especializados",
    ariaLabel: "Icono de capacitación",
  },
];

// Configuración de valores corporativos
const values = [
  { name: "Honestidad", icon: "handshake" as const },
  { name: "Innovación", icon: "leaf" as const },
  { name: "Confiabilidad", icon: "globe" as const },
  { name: "Responsabilidad ambiental", icon: "leaf" as const },
  { name: "Respeto", icon: "handshake" as const },
  { name: "Integración", icon: "globe" as const },
  { name: "Efectividad", icon: "leaf" as const },
  { name: "Equidad", icon: "handshake" as const },
];

// Configuración de "¿Por qué elegirnos?"
const whyChooseUs = [
  {
    icon: "handshake" as const,
    title: "Contamos con una amplia experiencia",
    ariaLabel: "Icono de experiencia",
  },
  {
    icon: "globe" as const,
    title: "Equipo multidisciplinario altamente capacitado",
    ariaLabel: "Icono de equipo multidisciplinario",
  },
  {
    icon: "leaf" as const,
    title: "Soluciones prácticas, innovadoras y sostenibles",
    ariaLabel: "Icono de soluciones innovadoras",
  },
  {
    icon: "book" as const,
    title: "Acompañamiento en trámites y cumplimiento normativo",
    ariaLabel: "Icono de acompañamiento",
  },
];
---

<Layout
  title="SACIFOR - Soluciones ambientales para un futuro sostenible"
  description="SACIFOR SCR y Asociados: consultoría ambiental, estudios especializados y proyectos de infraestructura sustentable desde 2013"
  currentPath="/"
>
  <Header currentPath="/" />
  <main id="main-content" role="main">
    <!-- Hero Section -->
    <section class="hero" aria-labelledby="hero-title">
      <div class="hero-content">
        <h1 id="hero-title">SACIFOR</h1>
        <p class="hero-subtitle">
          Soluciones ambientales para un futuro sostenible
        </p>
        <p class="hero-description">
          En SACIFOR ayudamos a empresas, comunidades y gobiernos a gestionar de
          forma responsable sus recursos naturales. Ofrecemos consultoría
          ambiental, estudios especializados y proyectos de infraestructura
          sustentable que equilibran desarrollo y cuidado del medio ambiente.
        </p>

        <Image
          src={image1}
          alt="Vista aérea de paisaje natural capturada con drone - SACIFOR consultoría ambiental"
          class="images image1"
          width={1200}
          quality={85}
          loading="eager"
        />

        <!-- Servicios Clave -->
        <section class="key-services" aria-labelledby="services-title">
          <h2 id="services-title" class="section-title">
            Nuestros servicios clave
          </h2>
          <div class="content-grid">
            {
              keyServices.map((service) => (
                <article class="content-card">
                  <div class="card-icon">
                    <Icon
                      name={service.icon}
                      size={40}
                      aria-label={service.ariaLabel}
                    />
                  </div>
                  <h3>{service.title}</h3>
                </article>
              ))
            }
          </div>
        </section>
      </div>
    </section>

    <!-- ¿Quiénes somos? Section -->
    <section
      class="about-section content-section"
      aria-labelledby="about-title"
    >
      <div class="content-container">
        <h2 id="about-title" class="section-title">¿Quiénes somos?</h2>
        <div class="about-content">
          <p class="about-intro">
            <strong>SACIFOR SCR y Asociados</strong> es una empresa fundada en 2013
            con el propósito de diseñar, implementar y dar seguimiento a programas
            y proyectos que contribuyan a la conservación y restauración ambiental,
            el saneamiento de ríos y cuerpos de agua, el ordenamiento territorial
            y análisis de riesgos, así como al fortalecimiento de las comunidades
            en la gestión integral de sus recursos.
          </p>
          <p>
            Nuestro compromiso es impulsar soluciones técnicas y sostenibles que
            garanticen el equilibrio entre el desarrollo y el cuidado del medio
            ambiente.
          </p>
        </div>
      </div>
    </section>

    <Image
      src={image2}
      alt="Vista aérea de paisaje natural capturada con drone - SACIFOR consultoría ambiental"
      class="images image2"
      width={1200}
      quality={85}
      loading="lazy"
    />

    <!-- Misión y Visión Section -->
    <section class="mission-vision" aria-labelledby="mission-vision-title">
      <div class="content-container">
        <h2 id="mission-vision-title" class="sr-only">Misión y Visión</h2>
        <div class="mission-vision-grid">
          <article class="mission-card">
            <div class="card-icon">
              <Icon name="globe" size={48} aria-label="Icono de misión" />
            </div>
            <h3>Misión</h3>
            <p>
              Brindar soluciones integrales en materia ambiental que promuevan
              el desarrollo local y regional, mediante la aplicación de
              conocimientos técnicos, científicos y prácticos de un equipo
              multidisciplinario.
            </p>
          </article>

          <article class="vision-card">
            <div class="card-icon">
              <Icon name="leaf" size={48} aria-label="Icono de visión" />
            </div>
            <h3>Visión</h3>
            <p>
              Ser una empresa reconocida a nivel nacional por la calidad de
              nuestros servicios, la capacidad de respuesta y el mejoramiento
              continuo, atendiendo de manera efectiva y asertiva las necesidades
              de nuestros clientes.
            </p>
          </article>
        </div>
      </div>
    </section>

    <!-- Valores Section -->
    <section class="values-section" aria-labelledby="values-title">
      <div class="content-container">
        <h2 id="values-title">Nuestros Valores</h2>
        <div class="values-grid">
          {
            values.map((value) => (
              <div class="value-item">
                <Icon
                  name={value.icon}
                  size={24}
                  aria-label={`Icono de ${value.name}`}
                />
                <span>{value.name}</span>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <Image
      src={image3}
      alt="Vista aérea de paisaje natural capturada con drone - SACIFOR consultoría ambiental"
      class="images image3"
      width={1200}
      quality={85}
      loading="lazy"
    />

    <!-- ¿Por qué elegirnos? Section -->
    <section class="why-choose-us content-section" aria-labelledby="why-title">
      <div class="content-container">
        <h2 id="why-title" class="section-title">¿Por qué elegirnos?</h2>
        <div class="content-grid">
          {
            whyChooseUs.map((item) => (
              <article class="content-card">
                <div class="card-icon">
                  <Icon
                    name={item.icon}
                    size={32}
                    aria-label={item.ariaLabel}
                  />
                </div>
                <h3>{item.title}</h3>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section" aria-labelledby="cta-title">
      <div class="content-container">
        <h2 id="cta-title">Desarrollo que respeta el ambiente</h2>
        <p class="cta-description">
          Conoce más sobre nuestros proyectos y servicios especializados
        </p>
        <div class="cta-buttons">
          <a
            href="/proyectos"
            class="cta-button primary"
            aria-label="Ver nuestros proyectos realizados"
          >
            Ver Proyectos
          </a>
          <a
            href="/contacto"
            class="cta-button secondary"
            aria-label="Contactar con SACIFOR"
          >
            Contáctanos
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
